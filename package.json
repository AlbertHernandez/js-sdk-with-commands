{
  "name": "js-playground",
  "version": "1.0.0",
  "description": "Playground for running javascript",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "test": "npm run test:unit",
    "test:unit": "NODE_ENV=test jest",
    "lint": "eslint --ignore-path .gitignore . --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "playground": "node-dev --clear --respawn ./playground",
    "prepare": "husky install"
  },
  "keywords": [
    "javascript",
    "playground"
  ],
  "author": "alberthernandezdev@gmail.com",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertHernandez/js-playground.git"
  },
  "homepage": "https://github.com/AlbertHernandez/js-playground#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "node-dev": "^7.4.2"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix"
    ]
  }
}
